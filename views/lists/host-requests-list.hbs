<section class="section-height request-section-layout">
  <h2>Your Requests</h2>
  <hr class= "hr-your-requests">
  {{#each requests}}
  <div class="requests-card">
  
    <div>
      <p>Email: {{this.artistId.email}}</p>
      <p>Band Name: {{this.artistId.artist.bandName}}</p>
      <p>Genre: {{this.artistId.artist.genre}}</p>
      <p>Personal Link: <a href="{{this.artistId.artist.socialMediaLink}}"></a></p>
      <p>Status:{{this.status}}</p>
     
    </div>

    {{#unless this.hideButtons}}
    <form method="POST" action="/events/{{this._id}}">
      <div id="accept-request" class="field submit">
        <button type="submit">Accept</button>
      </div>
    </form>

    <form method="POST" action="/lists/{{this._id}}/decline">
      <div id="decline-request" class="field submit">
        <button type="submit">Decline</button>
      </div>
    </form>
    {{else}}
    <p>&nbsp;</p>
    {{/unless}}
    
  </div>
  <hr class= "hr-your-requests">
  {{/each}}

</section>