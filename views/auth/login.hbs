<section class="container section-height">
  
<h1>Log in</h1>

<form method="POST" action="/auth/login">
 <div>
   <label>Email</label>
   <input type="email" name="email"/>
 </div>

 <div>
   <label>Password</label>
   <input type="password" name="password"/>
 </div>


 <div class="field submit">
   <button class="button" type="submit">Log in</button>
 </div>
</form>

<p>Not an existing member? Go to the <a class="signup-link-loginpage" href="/auth/signup">Signup</a></p>

{{#if messages.length}}
<ul class="validation">
  {{#each messages}}<li>{{this}}</li>{{/each}}
</ul>
{{/if}}
</section>