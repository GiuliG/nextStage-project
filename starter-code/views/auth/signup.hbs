<h1>Signup</h1>

<form method="POST" action="/auth/signup">
 <div>
   <label>Email</label>
   <input type="email" name="email" />
 </div>

 <div>
   <label>Password</label>
   <input type="password" name="password"/>
 </div>


 <div class="field submit">
   <button type="submit">Signup</button>
 </div>
 

</form>

 {{#if messages.length}}
<ul class="validation">
  {{#each messages}}<li>{{this}}</li>{{/each}}
</ul>
{{/if}}